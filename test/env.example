# ==========================================
# AZURE CONFIGURATION - Medical Chatbot
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ==========================================
# AZURE OPENAI - GPT MODEL
# ==========================================
OPENAI_GPT_ENDPOINT=https://your-gpt-resource.cognitiveservices.azure.com/
OPENAI_GPT_API_KEY=your-gpt-api-key-here
OPENAI_GPT_API_VERSION=2024-12-01-preview
OPENAI_GPT4_DEPLOYMENT=gpt-4.1

# ==========================================
# AZURE OPENAI - EMBEDDING MODEL
# ==========================================
OPENAI_EMBEDDING_ENDPOINT=https://your-embedding-resource.cognitiveservices.azure.com/
OPENAI_EMBEDDING_API_KEY=your-embedding-api-key-here
OPENAI_EMBEDDING_API_VERSION=2024-08-01-preview
OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# ==========================================
# STORAGE (Azure Blob Storage)
# ==========================================
STORAGE_ACCOUNT_NAME=your-storage-account
STORAGE_ACCOUNT_KEY=your-storage-key
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccount;AccountKey=yourkey;EndpointSuffix=core.windows.net

# ==========================================
# SQL DATABASES (3 Databases)
# ==========================================
# Database 1
SQL_SERVER_1=your-server.database.windows.net
SQL_DATABASE_1=medicalchatbot-users
SQL_USERNAME_1=sqladmin
SQL_PASSWORD_1=your-password
SQL_CONNECTION_STRING_1=Driver={ODBC Driver 18 for SQL Server};Server=tcp:your-server.database.windows.net,1433;Database=medicalchatbot-users;Uid=sqladmin;Pwd=your-password;Encrypt=yes;TrustServerCertificate=no;

# Database 2
SQL_SERVER_2=your-server.database.windows.net
SQL_DATABASE_2=medicalchatbot-drugs
SQL_USERNAME_2=sqladmin
SQL_PASSWORD_2=your-password
SQL_CONNECTION_STRING_2=Driver={ODBC Driver 18 for SQL Server};Server=tcp:your-server.database.windows.net,1433;Database=medicalchatbot-drugs;Uid=sqladmin;Pwd=your-password;Encrypt=yes;TrustServerCertificate=no;

# Database 3
SQL_SERVER_3=your-server.database.windows.net
SQL_DATABASE_3=medicalchatbot-analytics
SQL_USERNAME_3=sqladmin
SQL_PASSWORD_3=your-password
SQL_CONNECTION_STRING_3=Driver={ODBC Driver 18 for SQL Server};Server=tcp:your-server.database.windows.net,1433;Database=medicalchatbot-analytics;Uid=sqladmin;Pwd=your-password;Encrypt=yes;TrustServerCertificate=no;

# ==========================================
# COSMOS DB
# ==========================================
COSMOS_ACCOUNT=your-cosmos-account
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-primary-key
COSMOS_DATABASE=medicalchatbot
COSMOS_CONTAINER_CONVERSATIONS=conversations
COSMOS_CONTAINER_MESSAGES=messages

# ==========================================
# REDIS CACHE
# ==========================================
# Get this from Azure Portal → Your Redis Cache → Access keys → Primary connection string (StackExchange.Redis)
REDIS_CONNECTION_STRING=your-redis.redis.cache.windows.net:6380,password=your-redis-password,ssl=True,abortConnect=False

# ==========================================
# KEY VAULT (Optional)
# ==========================================
KEYVAULT_NAME=your-keyvault
KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# ==========================================
# DOCUMENT INTELLIGENCE (Optional)
# ==========================================
DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-docintel.cognitiveservices.azure.com/
DOCUMENT_INTELLIGENCE_KEY=your-doc-intelligence-key
DOCUMENT_INTELLIGENCE_MODEL=custom-prescription-model

# ==========================================
# APPLICATION SETTINGS
# ==========================================
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

